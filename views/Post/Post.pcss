.__SCOPE {
  width: 100%;
  max-width: 700px;
  margin: 0 auto;
  padding: 30px 20px;

  > .back {
    width: 100px;
    margin-bottom: 30px;
  }

  > h1 {
    display: flex;
    align-items: center;

    > svg {
      display: block;
      margin-right: 10px;
    }
  }

  > p {
    margin-bottom: 30px;
    max-width: 400px;
    font-style: italic;
  }
}
