.__SCOPE {
  width: 100%;

  > .group {
    border: 2px solid #ccc;
    width: 100%;
    border-radius: 5px;
    margin: var(--spacing-tight) 0;

    > label {
      border-bottom: 2px solid #ccc;
    }

    > label:first-of-type {
      > .topLabel {
        border-radius: 10px 10px 0 0;
      }
    }

    > label:last-of-type {
      border-bottom: none;

      > .inputContainer {
        border-radius: 0 0 10px 10px;
      }
    }
  }
}
